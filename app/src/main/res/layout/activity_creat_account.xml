<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_creataccount"
    tools:context="com.example.coyi.walter.CREATACCOUNT">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="154dp"
            android:layout_marginStart="33dp"
            android:text="運動狀況"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ed_name"
            android:layout_alignBottom="@+id/ed_name"
            android:layout_alignStart="@+id/textView3"
            android:text="暱稱"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ed_weight"
            android:layout_alignStart="@+id/ed_weight"
            android:layout_marginBottom="47dp"
            android:ems="10"
            android:hint="請輸入暱稱"
            android:inputType="text"
            android:maxLength="3"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:textColorHint="?android:attr/colorButtonNormal"
            tools:ignore="Deprecated,HardcodedText" />

        <EditText
            android:id="@+id/ed_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_marginBottom="49dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/textView3"
            android:ems="10"
            android:hint="請輸入體重"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@android:color/background_light"
            android:textColorHint="?android:attr/colorButtonNormal"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:onClick="toGAME"
            android:text="submit"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ed_weight"
            android:layout_alignBottom="@+id/ed_weight"
            android:layout_alignParentStart="true"
            android:layout_marginStart="45dp"
            android:text="體重"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/textView8">

            <RadioButton
                android:id="@+id/amount1"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="每天運動30分鐘內"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="每天運動1小時~30分鐘"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/amount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignStart="@+id/button1"
                android:layout_weight="1"
                android:text="每天運動1小時以上"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />
        </RadioGroup>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
