<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_water"
    tools:context="com.example.coyi.walter.WATER">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="633dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/buttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_alignTop="@+id/textView23"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/buttle_1"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/waternow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/add200"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="223dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add200"
            android:layout_alignEnd="@+id/waternow"
            android:layout_marginBottom="65dp"
            android:text="C.C."
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/add200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="141dp"
            android:onClick="add200"
            app:srcCompat="@drawable/buttle_8"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/add100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toStartOf="@+id/add200"
            android:onClick="add100"
            app:srcCompat="@drawable/buttle_7"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/add300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView14"
            android:layout_alignStart="@+id/imageView14"
            android:onClick="add300"
            app:srcCompat="@drawable/buttle_6"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="28dp"
            android:onClick="toGAME"
            app:srcCompat="@drawable/ic_x"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_alignEnd="@+id/imageView13"
            android:layout_below="@+id/add100"
            android:layout_marginTop="12dp"
            android:onClick="drink"
            app:srcCompat="@drawable/btn_drink"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_alignStart="@+id/imageView14"
            android:layout_below="@+id/imageView14"
            android:onClick="cancel"
            app:srcCompat="@drawable/btn_cancel"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/wateradd"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignStart="@+id/add100"
            android:layout_marginStart="9dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/add200"
            android:layout_alignTop="@+id/imageView14"
            android:layout_marginTop="25dp"
            android:text="C.C."
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/wateradd"
            android:layout_alignBottom="@+id/wateradd"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:text="+"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttle"
            android:layout_below="@+id/imageView13"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="9dp"
            android:text="3000 c.c."
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
